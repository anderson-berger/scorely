{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "declaration": true,
    "composite": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["schemas/**/*", "types/**/*"]
}
